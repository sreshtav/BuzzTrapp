<body ng-app="MainApp">
	<div ng-controller="UserCtrl">
		<div class="loginScreen" ng-show="!isAuthenticated">
			<div class="container">
		    <div class="loginImage">
		    	<img src="images/Trapp-icon-on-white-06.png" alt="Trapp icon" width="240vw"> 
		    </div>
		    <br>
		    <div ng-show="!creatingAccount">
					<form class="noshadow" ng-submit="login()">
						<input class="noshadow" type="text" ng-model="user.email" name="email" placeholder="Email"><br>
						<input class="noshadow" type="password" ng-model="user.password" name="password" placeholder="Password"><br>
						<input class="noshadow" type="submit" value="Log In">
					</form>
					<br>
					<a href="">Forgot password?</a><br>
					<div class="loginErr">{{error}}</div>
					<a ng-click="creatingAccount = true">create user</a>
		    </div>
				<div ng-show="creatingAccount">
					<form class="noshadow" ng-submit="submitNewUser()">
						<input class="noshadow" type="text" ng-model="newUser.name" name="name" placeholder="Name"><br>
						<input class="noshadow" type="text" ng-model="newUser.email" name="email" placeholder="Email"><br>
						<input class="noshadow" type="password" ng-model="newUser.password1" name="password" placeholder="Password"><br>
						<input class="noshadow" type="password" ng-model="newUser.password2" name="password" placeholder="Repeat Password"><br>
						<input class="noshadow" type="submit" value="Create account">
					</form>
					<br>
					<div class="loginErr">{{error}}</div>
					<a ng-click="creatingAccount = false">cancel</a>
				</div>
			</div>
		</div>
		<div ng-if="isAuthenticated">
			<div class="demo-layout mdl-layout mdl-js-layout mdl-layout--fixed-drawer">
			  <header class="demo-header mdl-layout__header">
			    <div class="mdl-layout__header-row mdl-color--trapp-red">
			      <div class="mdl-layout-spacer"></div>
			      <span class="mdl-layout-title"><img class="trapp_icon" src="images/Trapp-icon-on-white-06.png"/>Trapp</span>
			      <div class="mdl-layout-spacer"></div>
			    </div>
			  </header>
			  <div class="demo-drawer mdl-layout__drawer">
			    <header class="demo-drawer-header mdl-color--trapp-blue">
			      <img src="images/user.png" class="demo-avatar">
			      <div class="demo-avatar-dropdown">
			        <span>{{userEmail}}</span>
			        <div class="mdl-layout-spacer"></div>
			        <button id="accbtn" class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
			          <i class="material-icons" role="presentation">arrow_drop_down</i>
			          <span class="visuallyhidden">Accounts</span>
			        </button>
			        <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="accbtn">
			          <li class="mdl-menu__item">hello@example.com</li>
			          <li class="mdl-menu__item">info@example.com</li>
			          <li class="mdl-menu__item"><i class="material-icons">add</i>Add another account...</li>
			        </ul>
			      </div>
			    </header>
			    <nav class="demo-navigation mdl-navigation mdl-color--trapp-blue">
			      <a class="mdl-navigation__link mdl-color-text--white" href="#/"><i class="mdl-color-text--white material-icons" role="presentation">account_circle</i>Manage Trips</a>
			      <a class="mdl-navigation__link" href="#/history"><i class="mdl-color-text--white material-icons" role="presentation">history</i>History</a>
			      <a class="mdl-navigation__link" href="#/setting"><i class="mdl-color-text--white material-icons" role="presentation">settings</i>Settings</a>
			      <a class="mdl-navigation__link" href="#/help"><i class="mdl-color-text--white material-icons" role="presentation">help</i>Help</a>
			      <a class="mdl-navigation__link" ng-click="logout()" href=""><i class="mdl-color-text--white material-icons" role="presentation">exit_to_app</i>Log Out</a>
			    </nav>
			  </div>
			  <main class="mdl-layout__content">
					<div ui-view></div>
			  </main>
			</div>
		</div>
	</div>
</body>
