<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    package="buzztrapp.trapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permission to use AlarmManager -->
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <!-- Permission to Send SMS -->
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".manage_trips.ManageTripsActivity" />
        <activity android:name=".create_trip.CreateTripActivity" />
        <activity android:name=".SignUpActivity" />
        <!--
            <activity android:name=".CreateTripDestinationFragment" />
        <activity android:name=".CreateTripDurationFragment" />
        -->
        <!-- <activity android:name=".CreateTripFragment"></activity> -->
        <activity android:name=".edit_trip.EditTripActivity" />
        <activity android:name=".edit_trip.EditEventActivity">
        </activity>
        <activity android:name=".edit_trip.EditEventBottomFragment"></activity>

        <receiver android:name=".helper.NextLocationAlertReceiver"/>
    </application>

</manifest>
